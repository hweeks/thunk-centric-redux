{
  "name": "redux-thunk-recursion-detect",
  "version": "1.1.1",
  "description": "A drop-in replacement for `redux-thunk` that allows middleware to detect that a thunk has been dispatched from within another thunk",
  "main": "dist/reduxThunkRecursionDetect.cjs.js",
  "module": "dist/reduxThunkRecursionDetect.esm.js",
  "types": "dist/types/reduxThunkRecursionDetect.d.ts",
  "repository": "github:itaylor/thunk-centric-redux",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "scripts": {
    "build": "rollup -c && yarn types",
    "types": "tsc -d src/reduxThunkRecursionDetect.ts --emitDeclarationOnly --declarationMap --declarationDir dist/types",
    "dev": "rollup -c -w",
    "test": "NODE_ENV=test jest",
    "coverage": "jest --coverage",
    "precoverage": "yarn run build"
  },
  "keywords": [
    "redux",
    "thunk",
    "middleware",
    "recursion",
    "nested",
    "flow-control"
  ],
  "author": "ian.b.taylor@gmail.com",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/jest": "^24.0.15",
    "chai": "^4.2.0",
    "jest": "^24.8.0",
    "redux": "^4.0.1",
    "rollup": "^1.15.3",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "typescript": "^3.5.2"
  }
}
